{{#partial "content"}}
    <section class="display-form">
        <div class="container">
            <form action="/rangers" method="post" id="sighting">
                <div class="card">
                    <div class="card-body mx-4">
                        <div class="text-center">
                            <h3 class="dark-grey-text mb-5"><strong>Are you a Ranger?</strong></h3>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1" onclick="ranger(0)" checked>
                            <label class="form-check-label" for="yes">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2"  onclick="ranger(1)">
                            <label class="form-check-label" for="no">No</label>
                        </div>
                        <span id="notRanger">Only Rangers can create new Sightings!</span>
                        <div id="rangerDetails">
                            <div class="form-group">
                                <label for="rangerName">Name</label>
                                <input type="text" class="form-control" name="rangerName" id="rangerName" placeholder="What is your name?" required>
                            </div>
                            <div class="form-group">
                                <label for="rangerBadgeNumber">Badge Number</label>
                                <input type="number" class="form-control" name="rangerBadgeNumber" id="rangerBadgeNumber" placeholder="What is your badge number?" oninput="contact()" required>
                            </div>
                        </div>
                        <div id="contactDetails">
                            <div class="form-group">
                                <p><b>We would love to get in touch with you. Kindly fill in your contact details to proceed.</b></p>
                                <label for="rangerPhoneNumber">Phone Number</label>
                                <input type="number" class="form-control" name="rangerPhoneNumber" id="rangerPhoneNumber" placeholder="Enter your phone number" required>
                            </div>
                            <div class="form-group">
                                <label for="rangerEmailAddress">Email Address</label>
                                <input type="text" class="form-control" name="rangerEmailAddress" id="rangerEmailAddress" placeholder="Enter your email address" required>
                            </div>
                            <button type="submit" class="btn btn-light btn-block" id="submitRanger">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>


{{/partial}}

{{> layout.hbs}}