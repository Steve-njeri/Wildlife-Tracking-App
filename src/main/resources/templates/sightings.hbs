{{#partial "content"}}

    <section class="display-part">
        <div class="add-sighting">
            <a href="/sightings/new"><button class="btn btn-unique">Add New Sighting</button></a>
        </div>
        <hr>
        <br>
        <h2>LIST OF SIGHTINGS</h2>
        <div class="container">
        {{#if sightings}}
            <table class="table table-striped">
                <thead class="thead-dark">
                <th>Animal Name</th>
                <th>Location Name</th>
                <th>Ranger Name</th>
                </thead>
                <tbody>
                {{#each sightings}}
                    <tr>
                        <td>{{animal_id}}</td>
                        <td>{{location}}</td>
                        <td>{{rangerName}}</td>
                    </tr>
                {{/each}}
            </table>
        </div>
        {{else}}

        {{/if}}
    </section>

{{/partial}}

{{> layout.hbs}}
