{{#partial "content"}}
    <section class="display-part">
        <div class="add-animals">
            <a href="/endangered/new"><button class="btn btn-primary">Add New Endangered animal</button></a>
            <a href="/animals"><button class="btns btn-danger">View Non-Endangered animals</button></a>
        </div>
        <hr>
        <br>
        <h1>List of Endangered Animals</h1>
        <div class="row container">
            <div class="col-md-1"></div>
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead class="thead-dark">
                    <th>Animal name</th>
                    <th>Age</th>
                    <th>Health status</th>
                    <th>Delete</th>
                    </thead>
                    <tbody>
                    {{#each endangered}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{age}}</td>
                            <td>{{health}}</td>
                            <td><a class="text-danger" href="/animals/{{id}}/delete"><span class="material-icons-outlined">
                                    delete
                                </span></a></td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="col-md-1"></div>
        </div>
    </section>

{{/partial}}

{{> layout.hbs}}
