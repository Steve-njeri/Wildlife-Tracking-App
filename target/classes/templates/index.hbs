{{#partial "content"}}
    <!--home section starts-->
    <section class="home" id="home">
        <div class="content">
            <h3>Welcome to Wildlife<span>tracking</span></h3>
            <a href="/animals/new" class="btn">Add animal</a>
        </div>

        <div class="image">
            <img src="images/lion3.png" alt="">
        </div>

    </section>
    <section>
        <h2>TRACKED ANIMALS</h2>
        <div class="row container">
            <div class="col-md-1"></div>
            <div class="col-md-8">
                <table class="table table-striped">
                    <thead class="thead-dark">
                    <th>Animal</th>
                    <th>Ranger</th>
                    <th>Location</th>
                    <th>Age</th>
                    <th>Health</th>
                    <th>LastSeen</th>
                    </thead>
                    <tbody>
                        <tr>
                        {{#each animals}}
                            <td>{{animal_id}}</td>
                        {{/each}}
                            <td>{{rangerName}}</td>
                            <td>{{location}}</td>
                            <td>{{age}}</td>
                            <td>{{health}}</td>
                            <td>{{time}}</td>
                        </tr>
                </table>
            </div>
        </div>
    </section>

    <!--home section ends-->
{{/partial}}

{{> layout.hbs}}